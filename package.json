{
  "name": "ts-retoken",
  "version": "0.0.1",
  "description": "Lightweight TypeScript library for automatic JWT token refresh with cross-tab synchronization",
  "keywords": [
    "token",
    "refresh",
    "jwt",
    "authentication",
    "typescript",
    "cross-tab",
    "auth"
  ],
  "author": "phamthao03596@gmail.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vanthao03596/ts-retoken.git"
  },
  "homepage": "https://github.com/vanthao03596/ts-retoken#readme",
  "bugs": {
    "url": "https://github.com/vanthao03596/ts-retoken/issues"
  },
  "type": "module",
  "module": "./dist/ts-retoken.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/ts-retoken.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc",
    "typecheck": "tsc -p tsconfig.test.json",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src test",
    "lint:fix": "eslint src test --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "prepublishOnly": "npm run build && npm run typecheck && npm run test:run && npm run lint"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.4",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.1",
    "vite": "^7.2.4",
    "vitest": "^4.0.15"
  }
}
